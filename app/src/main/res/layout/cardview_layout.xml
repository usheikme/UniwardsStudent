<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="#70000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_dashimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/card_dashtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card_dashimage"
            android:maxLines="3"
            android:padding="12dp"
            android:text="xxxx"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/card_dashdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card_dashimage"
            android:layout_below="@+id/card_dashtitle"
            android:maxLines="3"
            android:padding="12dp"
            android:text="test"
            android:textColor="#ffff"
            android:textSize="14dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>